%pessoa(naturalidade,cidade,curso,comida,idade,acento).

aolado(Z,Y,X) :- nextto(Z,Y,X) ; nextto(Y,Z,X).
extremidades(pessoa(_,_,_,_,IDADE,_),X) :- (nth0(0,X,pessoa(_,_,_,_,ID,_)),not(ID >= 20), not(ID<=23),pessoa(_,_,_,_,IDADE,1)) ; (nth0(3,X,pessoa(_,_,_,_,ID,_)),not(ID >= 20), not(ID<=23),pessoa(_,_,_,_,IDADE,3)).
%idade(X,MEMBER) :- 


solucao(R) :- 
X = [pessoa(_,_,_,_,_,1),pessoa(_,_,_,_,_,2),pessoa(_,_,_,_,_,3),pessoa(_,_,_,_,_,4)],
pessoa(florianopolis,_,_,_,_,R), 
